{
  "compilerOptions": {
    "lib": ["es2015", "dom"],
    "allowJs": true, // <-- option to allow js files as input in the ts compiler
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
